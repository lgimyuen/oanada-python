{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
		"json": {
			"format": "{ datetime: %(asctime)s,  name: %(name)s,  levelname: %(levelname)s,  msg: %(message)s }"
		}
    },

    "filters": {
        "BollingerStrategyOnTickFilter": {
            "name": "BollingerStrategy.on_tick"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "info.log",
            "maxBytes": 1024,
            "backupCount": 0,
            "encoding": "utf8"
        },

        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "errors.log",
            "maxBytes": 1024,
            "backupCount": 0,
            "encoding": "utf8"
        },

        "debug_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "debug.log",
            "maxBytes": 1024,
            "backupCount": 0,
            "encoding": "utf8",
            "filters": ["BollingerStrategyOnTickFilter"]
        }
,

        "warn_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "WARN",
            "formatter": "simple",
            "filename": "warn.log",
            "maxBytes": 1024,
            "backupCount": 0,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "my_module": {
            "level": "ERROR",
            "handlers": ["console"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["console", "error_file_handler", "debug_file_handler"]
    }
}